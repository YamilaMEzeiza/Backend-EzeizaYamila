<!DOCTYPE html>
<html lang="es">
    <body>
<h1>Productos </h1>

    <% if (productos.length>0) { %>
        <div class="d-flex align-items-center flex-column ">
            <table class="table table-light">
                <tr>
                    <th>Nombre del producto</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>
                <tbody>
                    <% productos.forEach(function(producto){ %>
                        <tr>
                            <td>
                                <%-producto.title%>
                            </td>
                            <td>
                                <%-producto.price%>
                            </td>
                            <td><img src="<%-producto.thumbnail%>" alt="<%-producto.title%>" width="50px" height="50px"></td>
                        </tr>
                        <%}) %>
                </tbody>
            </table>
            <a href="/"><button type="button" class="btn btn-primary">Formulario</button></a>
        </div>
        <% } else{ %>
            <h3>No hay producto</h3>
            <a href="/"><button type="button" class="btn btn-primary">Formulario</button></a>
            <% } %>
                <%- include('./partials/BS') %>
</body>

</html>